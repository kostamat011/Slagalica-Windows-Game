<Window x:Class="SlagalicaPC.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlagalicaPC"
        mc:Ignorable="d"
        Title="New Highscore" Height="239.99" Width="490.282"
        Background="#fbfc7e">
    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" >
        <TextBlock Name="tbkTitle" FontFamily="Arial" MaxWidth="700" TextAlignment="Center" TextWrapping="Wrap" FontWeight="Black" FontSize="20" HorizontalAlignment="Center" Margin="0,15,0,0">Cestitamo, ostvarili ste odlican rezultat. Unesite vase ime:</TextBlock>
        <TextBox Name="tbName" BorderBrush="Black" BorderThickness="1" Height="50" Background="#7eccfc" FontSize="32" Width="370" Margin="10" />
        <Button Name="btnOk" Style="{StaticResource MenuButton}" Width="380" Height="50" Click="BtnOk_Click">OK</Button>

    </WrapPanel>
</Window>
