<Window x:Class="SlagalicaPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlagalicaPC"
        mc:Ignorable="d"
        Title="MainWindow" Height="468.349" Width="490.282"
        Background="#fbfc7e">
    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical" Margin="10,20,10,10" Height="314" Width="450">
            <Button Name="btnNewGame" Style="{StaticResource MenuButton}" Width="380" Height="50" Click="BtnNewGame_Click">NOVA PARTIJA</Button>
            <Button Name="btnScoreboard" Style="{StaticResource MenuButton}" Width="380" Height="50" Click="BtnScoreboard_Click">REZULTATI</Button>
            <Image Source="/SlagalicaPC;component/Images/LOGO4.png"  HorizontalAlignment="Center" Width="423" Margin="20,10,10,0" Height="170"/>
        </StackPanel>
        <Button x:Name="btnExit" Style="{StaticResource MenuButton}" Width="380" Height="50" Click="BtnExit_Click" Content="IZLAZ"/>
    </WrapPanel>
</Window>
